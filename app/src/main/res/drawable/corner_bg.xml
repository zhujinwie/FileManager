
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
                <shape>
                        <stroke
                            android:width="1dp"
                            android:color="@color/daek_bg" />

                        <solid android:color="#663399" />

                        <corners android:radius="5dp" />
                </shape>
        </item>
        <item
            android:bottom="1dp"
            android:left="1dp"
            android:right="1dp"
            android:top="1dp">
                <shape>
                        <stroke
                            android:dashGap="5dp"
                            android:dashWidth="5dp"
                            android:width="2.5dp"
                            android:color="@color/daek_bg" />

                        <solid android:color="#663399" />

                        <corners android:radius="5dp" />
                </shape>
        </item>
</layer-list>